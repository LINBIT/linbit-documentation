"client {\n"
"  host_volume \"modules\" {\n"
"    path = \"/lib/modules\"\n"
"    read_only = true\n"
"  }\n"
"  host_volume \"kernel-src\" {\n"
"    path = \"/usr/src\"\n"
"    read_only = true\n"
"  }\n"
"}\n"
