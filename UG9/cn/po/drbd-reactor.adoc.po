#. type: delimited block -
#: UG9/en/drbd-reactor.adoc:821
#, no-wrap
msgid ""
"# cat << EOF > /etc/drbd-reactor.d/prometheus.toml\n"
"[[prometheus]]\n"
"enums = true\n"
"address = \"0.0.0.0:9942\"\n"
"EOF\n"
msgstr ""

#. type: Plain text
#: UG9/en/drbd-reactor.adoc:824
