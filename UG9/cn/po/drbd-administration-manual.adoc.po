#: UG9/en/drbd-administration-manual.adoc:968
#, no-wrap
msgid ""
"resource <resource> {\n"
"  net {\n"
"    on-congestion pull-ahead;\n"
"    congestion-fill 2G;\n"
"    congestion-extents 2000;\n"
"    ...\n"
"  }\n"
"  ...\n"
"}\n"
msgstr ""
"resource <resource> {\n"
"  net {\n"
"    on-congestion pull-ahead;\n"
"    congestion-fill 2G;\n"
"    congestion-extents 2000;\n"
"    ...\n"
"  }\n"
"  ...\n"
"}\n"

#. type: Plain text
#: UG9/en/drbd-administration-manual.adoc:972
msgid ""
