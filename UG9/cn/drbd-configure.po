"  disk        /dev/vg/r0;\n"
"  meta-disk   internal;\n"
msgstr ""
"resource r0 {\n"
"  device      /dev/drbd0;\n"
"  disk        /dev/vg/r0;\n"
"  meta-disk   internal;\n"

#. type: delimited block -
#: configure.adoc:658
#, no-wrap
msgid ""
"  on store1 {\n"
"    address   10.1.10.1:7100;\n"
"    node-id   1;\n"
"  }\n"
"  on store2 {\n"
"    address   10.1.10.2:7100;\n"
"    node-id   2;\n"
"  }\n"
"  on store3 {\n"
"    address   10.1.10.3:7100;\n"
"    node-id   3;\n"
"  }\n"
"  on store4 {\n"
"    address   10.1.10.4:7100;\n"
"    node-id   4;\n"
"  }\n"
msgstr ""
