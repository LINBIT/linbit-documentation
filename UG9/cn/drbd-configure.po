"    node-id   4;\n"
"  }\n"

#. type: delimited block -
#: configure.adoc:663
#, no-wrap
msgid ""
"  connection-mesh {\n"
"\thosts     store1 store2 store3 store4;\n"
"  }\n"
"}\n"
msgstr ""
"  connection-mesh {\n"
"\thosts     store1 store2 store3 store4;\n"
"  }\n"
"}\n"

