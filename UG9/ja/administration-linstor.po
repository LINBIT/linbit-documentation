" </appender>\n"
" <logger name=\"LINSTOR/Controller\" level=\"INFO\" additivity=\"false\">\n"
"   <appender-ref ref=\"STDOUT\" />\n"
"   <!-- <appender-ref ref=\"FILE\" /> -->\n"
" </logger>\n"
" <logger name=\"LINSTOR/Satellite\" level=\"INFO\" additivity=\"false\">\n"
