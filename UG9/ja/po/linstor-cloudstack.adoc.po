#, no-wrap
msgid ""
"# mkdir -p /export/secondary\n"
"# echo \"/export *(rw,async,no_root_squash,no_subtree_check)\" >> /etc/exports\n"
"# exportfs -a\n"
msgstr ""
"# mkdir -p /export/secondary\n"
"# echo \"/export *(rw,async,no_root_squash,no_subtree_check)\" >> /etc/exports\n"
"# exportfs -a\n"

#. type: Plain text
#: /home/h-kuroki/work/drbd-doc-ja/proto/v9/base/adoc/linstor-cloudstack.adoc:248
msgid "Next, enable and start the NFS server service."
msgstr "次に、NFSサーバーサービスを有効にして起動します。"

#. type: delimited block -
#: /home/h-kuroki/work/drbd-doc-ja/proto/v9/base/adoc/linstor-cloudstack.adoc:251
#, no-wrap
msgid "# systemctl enable --now nfs-server\n"
msgstr "# systemctl enable --now nfs-server\n"

