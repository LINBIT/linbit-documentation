"listen_tls = 0\n"
"listen_tcp = 1\n"
"tcp_port = \"16509\"\n"
"auth_tcp = \"none\" # not suitable for production\n"
"mdns_adv = 0\n"
"EOF\n"

#. type: Plain text
#: /home/h-kuroki/work/drbd-doc-ja/proto/v9/base/adoc/linstor-cloudstack.adoc:348
